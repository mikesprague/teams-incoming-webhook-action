{
  "name": "teams-incoming-webhook-action",
  "version": "1.9.3",
  "description": "GitHub Action to send an MS Teams notification via Incoming Webhook",
  "exports": "./src/index.js",
  "private": "true",
  "type": "module",
  "scripts": {
    "build": "npm run lint && npm run prepare",
    "changelog": "conventional-changelog -i CHANGELOG.md -s && git add CHANGELOG.md",
    "lint": "eslint ./src",
    "version": "npm run changelog",
    "prepare": "rm -rf dist && ncc build ./src/index.js -o dist --source-map --license licenses.txt",
    "test": "echo \"No tests yet...\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikesprague/teams-incoming-webhook-action.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/teams-incoming-webhook-action/issues"
  },
  "homepage": "https://github.com/mikesprague/teams-incoming-webhook-action#readme",
  "dependencies": {
    "@actions/core": "1.10.0",
    "@octokit/rest": "19.0.5",
    "axios": "1.2.2",
    "dayjs": "1.11.7"
  },
  "devDependencies": {
    "@vercel/ncc": "0.36.0",
    "commitizen": "4.2.6",
    "conventional-changelog": "3.1.25",
    "conventional-changelog-cli": "2.2.2",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "cross-env": "7.0.3",
    "cz-git": "^1.4.1",
    "eslint": "8.31.0",
    "prettier": "2.8.1",
    "prettier-eslint": "15.0.1"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {},
    "ignorePatterns": [
      "dist/",
      ".history/",
      "node_modules/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "tabWidth": 2
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "release": {
    "preset": "conventionalcommits"
  }
}
